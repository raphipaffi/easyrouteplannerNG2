{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "serve",
            "command": "ng",
            "isShellCommand": false,
            "echoCommand": true,
            "args": ["serve", "-o"],
            "showOutput": "always"
        },
        {
            "taskName": "deploy",
            "command": "gcloud.cmd",
            "isShellCommand": false,
            "echoCommand": true,
            "args": ["app", "deploy", "--project=easyrouteplanner", "--quiet", "app.yaml"],
            "showOutput": "always"
        },
        {
            "taskName": "browser",
            "command": "gcloud.cmd",
            "isShellCommand": false,
            "echoCommand": true,
            "args": ["app", "browse", "--project=easyrouteplannerng2"],
            "showOutput": "always"
        }
    ]
}
